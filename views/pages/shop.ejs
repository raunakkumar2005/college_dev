    </main>


    <footer id="site_footer">
        <!-- copyright information, links to social media profiles, and other information-->

        <div class="logo">College-campus</div>
        <div class="main_menu">
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/about">About</a></li>
                <li><a href="/courses">Courses</a></li>
                <li class="active"><a href="/trade">Buy/Sell</a></li>
                <li><a href="/blogs">Blog</a></li>
                <li><a href="/contact">Contact</a></li>
                <li title="your cart"><a href="/cart"><i class="fa fa-shopping-cart" aria-hidden="true"></i></a></li>
                <li class="navbar-signin"><a href="/login">Sign In / Sign Up</a></li>
            </ul>
