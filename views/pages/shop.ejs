<body>
    <header>
        <!-- logo, navigation menu, and introductory content-->
        <div class="accessiblity_logo_cont">
            <!-- <span></span> -->
            <span id="menu_bar">
                <i class="fa fa-bars fa-2x" aria-hidden="true"></i>
            </span>
            <div class="logo">College-campus</div>
            <span id="accessibility" title="accessibility"><i class="fa fa-universal-access fa-2x"
                    style="float: right;  padding: 10px;" aria-hidden="true"></i>
                <ul class="accessibility_menu">
                    <li><a href="#"><i class="fa fa-moon-o btn" title="dark theme" id="theme-toggle"
                                aria-hidden="true"></i></a></li>
                </ul>
            </span>
        </div>
        <nav class="main_menu">
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/about">About</a></li>
                <li><a href="/courses">Courses</a></li>
                <li class="active"><a href="/trade">Buy/Sell</a></li>
                <li><a href="/blogs">Blog</a></li>
                <li><a href="/contact">Contact</a></li>
                <li title="your cart" class="cart-icon"><a href="/cart"><i class="fa fa-shopping-cart"
                            aria-hidden="true"></i><span class="cart-count">0</span></a></li>
                <li class="navbar-signin"><a href="/register">Sign In / Sign Up</a></li>
            </ul>
        </nav>

    </header>
    <section id="register-container-parent">
        <div class="register-container">
            <div class="register-form-container">
                <h2>Registration Form</h2>
                <hr color="white">
                <form id="register-form" method="post" action='/register'>
                    <div class="name-cont-cont">
                        <div class="name-cont">
                            <label for="first-name">First Name:</label>
                            <input type="text" name="fname" id="first-name" placeholder="Enter Your First Name">
                        </div>
                        <div class="name-cont">
                            <label for="last-name">Last Name:</label>
                            <input type="text" name="lname" id="last-name" placeholder="Enter Your Last Name">
                        </div>
                    </div>
                    <div class="gender-cont">
                        <label for="gender">Gender:</label>
                        Male<input type="radio" name="mygender" id="male">
                        Female<input type="radio" name="mygender" id="female">
                        Other<input type="radio" name="mygender" id="other">
                    </div>
                    <div class="age-cont">
                        <label for="age">Age:</label>
                        <input type="number" name="age" id="age" placeholder="Enter Your Age">
                    </div>
                    <div class="email-cont">
                        <label for="email">Email:</label>
                        <input type="email" name="email" id="email" placeholder="Enter a Valid Email">
                    </div>
                    <div class="pwd-cont-cont">
                        <div class="pwd-cont">
                            <label for="password">Create Password:</label>
                            <input type="password" name="pass" id="password" placeholder="Create a Password">
                        </div>
                        <div class="pwd-cont">
                            <label for="confirm-password">Confirm Password:</label>
                            <input type="password" name="cpass" id="confirm-password"
                                placeholder="Re-enter the Password">
                        </div>
                    </div>
                    <div class="college-name-cont">
                        <label for="college-name">College Name:</label>
                        <input type="text" name="clg" id="college-name" placeholder="Enter Your College Name">
                    </div>
                    <div class="college-roll-course-cont">
                        <div class="college-roll-cont">
                            <label for="college-roll-no">College Roll No.:</label>
                            <input type="number" name="roll" id="college-roll-no"
                                placeholder="Enter Your Valid College Roll Number">
                        </div>
                        <div class="college-course-cont">
                            <label for="course">Course:</label>
                            <input type="text" name="Course" id="course" placeholder="Enter Your Present Course">
                        </div>
                    </div>
                    <div class="year-cont">
                        <label for="year">Year:</label>
                        First<input type="radio" name="sem" id="first">
                        Second<input type="radio" name="sem" id="second">
                        Third<input type="radio" name="sem" id="third">
                    </div>
                    <div class="profile-pic-cont">
                        <label for="profile-pic" style="margin: 5px;">Profile Pic:</label>
                        <i class="fa fa-user" aria-hidden="true" style="margin: 5px;"></i>
                        <input type="file" name="File" id="profile-pic" style="margin: 5px;">
                    </div>
                    <input type="submit" name="Submit" class="submit">
                </form>
                <div class="sign-dwn-btns">
                    <button class="show-sign-in-btn">Already Sign up - Sign In </button>
                </div>
            </div>
        </div>

    </section>
    <section id="login-container-parent">
        <div class="login-container">
            <div class="login-form-container">
                <h2>Sign In </h2>
                <hr color="white">
                <form id="login-form" method="post" action='/login'>
                    <div class="email-cont">
                        <label>Email: </label>
                        <input type="email" name="email" id="email" placeholder="Enter Registered Email-ID">
                    </div>
                    <div class="pwd-cont">
                        <label>Password: </label>
                        <input type="password" name="password" id="password" placeholder="Enter Your Password">
                    </div>
                    <div class="remember-me">
                        <input type="checkbox" name="remember" id="remember-me"><label for="remember-me">Remember
                            Me</label>
                    </div>
                    <input type="submit" name="login-submit" id="login-submit" class="submit">

                </form>
                <div class="sign-dwn-btns">
                    <button id="show-sign-up-btn">Sign Up</button>
                    <button id="forgot-pwd-btn">Forgot Password</button>
                </div>
            </div>
        </div>
    </section>

    <!-- <div class="cart-popup">
        <h3 class="cart-title">Cart</h3>
        <ul class="cart-items"></ul>
    </div> -->
    <main>
        <section class="featured_items ">
            <!--  featured products or listings-->

            <h2>Our Products</h2>
            <div class="card-container">
                <% result.forEach(function(item) { %>
                    <div class="card">
                        <img src="<%= item.image %>" alt="Space" class="card-img">
                        <div class="card-content">
                            <h3 class="card-title">
                                <%= item.Name %>
                            </h3>
                            <p class="card-text">
                                price : â‚¹<%= item.price %>
                            </p>
                            <form action="/add_to_cart" method="post">
                                <input type="hidden" name="id" value="<%= item.id %>">
                                <input type="hidden" name="name" value="<%= item.Name %>">
                                <input type="hidden" name="price" value="<%= item.price %>">
                                <input type="hidden" name="quantity" value="1">
                                <input type="hidden" name="image" value="<%= item.image %>">
                                <input class="btn  add-to-cart-btn" type="submit" value="Add to Cart">
                            </form>

                        </div>
                    </div>
                    <% }) %>

            </div>
        </section>
